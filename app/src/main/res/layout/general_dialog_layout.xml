<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

    <LinearLayout
            android:layout_width="@dimen/dialog_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@drawable/rounded_rect_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="@dimen/margin_pad_24"
                    android:layout_height="@dimen/margin_pad_24"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"/>

            <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:textColor="@color/cc_orane_player"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

        </LinearLayout>


        <TextView
                android:id="@+id/tv_maincontent"
                android:includeFontPadding="false"
                android:textAppearance="@style/robotoMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/cc_text_color"
                android:textSize="@dimen/text_size_medium1"
                android:textStyle="italic"/>

        <TextView
                android:id="@+id/tv_content"
                android:includeFontPadding="false"
                android:textAppearance="@style/robotoMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:textColor="@color/cc_text_grey"
                android:textSize="@dimen/text_size_medium"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_nb"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/robotoMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector_grey"
                    android:gravity="center_horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:text="No thanks"
                    android:textColor="@color/grey_dialog"
                    android:textSize="@dimen/text_size_moderate"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tv_pb"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/robotoMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector_grey"
                    android:gravity="center_horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/ok"
                    android:textColor="@color/cc_orane_player"
                    android:textSize="@dimen/text_size_moderate"
                    android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>